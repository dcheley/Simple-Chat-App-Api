<div class="mb-3">
  <%= link_to new_chat_room_path, class: 'btn btn-primary' do %>
    New Conversation
  <% end %>
</div>

<% if @chat_rooms.present? %>
  <nav>
    <% @chat_rooms.each do |chat_room| %>
      <%= link_to chat_room.name, chat_room_path(chat_room), class: 'pl-0 nav-link' %>
    <% end %>
  </nav>
<% else %>
  <div class="text-muted">
    No chat rooms found.
  </div>
<% end %>
